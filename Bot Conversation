def user_data_collection():
  name = input("Hello! What is your name? ")
  age_input = input("How old are you? ")
  age_recieved = int(age_input)
  bot_age = int(3)
  age_difference = age_recieved - bot_age
  color = input("What's your favorite color? ")
  print(f"Nice to meet you {name}!")
  print(f"You are {age_difference} years older than me. I'm only {bot_age} year's old!")
  print(f"Oh, {color} it's a beatiful color ")

user_data_collection()
